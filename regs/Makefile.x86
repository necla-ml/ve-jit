# test based on regSymbol.hpp, register name and register id operations
oldRegSym: oldRegSym.cpp spill.o oldStates.o old/spill-impl.hpp old/spill.hpp throw.hpp old/regDefs.hpp
	$(CXX) -o $@ $(CXXFLAGS) $(C11X) $(filter %.cpp,$^) $(filter %.o,$^)
	$(call vg)
# test based on regSymbol2.hpp, register name and register id operations
testRegSym2: testRegSym2.cpp reg-base.o reg-aurora.o spill2.o regSymbol2.hpp spill-impl2.hpp spill2.hpp throw.hpp reg-base.hpp
	# old/regStates.hpp (seems like an old idea, defunct?)
	$(CXX) -o $@.i $(CXXFLAGS) $(C11X) -dD -E $<
	$(CXX) -o $@ $(CXXFLAGS) $(C11X) $(filter %.cpp,$^) $(filter %.o,$^)
	$(call vg)

symbStates-old.o: symbStates-old.cpp old/symbStates-old.hpp throw.hpp
	$(CXX) -o $@ $(CXXFLAGS) -std=gnu++11 -c $<
reg-base.o: reg-base.cpp reg-base.hpp bitfield.hpp throw.hpp
	$(CXX) -o $@ $(CXXFLAGS) $(C11X) -c $<
testSymbStates-old: testSymbStates-old.cpp symbStates-old.o oldStates.o reg-base.o spill.o old/symbStates-old.hpp old/spill.hpp throw.hpp symScopeUid.hpp
	$(CXX) -o $@ $(CXXFLAGS) $(C11X) $^
